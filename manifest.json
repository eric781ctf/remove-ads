{
  "manifest_version": 3,
  "name": "Ad Remover & Pinner",
  "version": "1.0",
  "description": "Remove ads and pin them on screen. Also show Previous/Next links.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Ad Remover & Pinner"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}
